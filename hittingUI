    private void okMouseClicked(java.awt.event.MouseEvent evt) {                                
        
        String Redherb=redherb.getText();
        String Orangeherb=orangeherb.getText();
        String Blueherb=blueherb.getText();
        String Redpotion=redpotion.getText();
        String Orangepotion=orangepotion.getText();
        String Bluepotion=bluepotion.getText();
        boolean Newbie=newbie.isSelected();
        boolean Rich=rich.isSelected();
        
        
        
        Integer RH=new Integer(Redherb);
        Integer OH=new Integer(Orangeherb);
        Integer BH=new Integer(Blueherb);
        Integer RP=new Integer(Redpotion);
        Integer OP=new Integer(Orangepotion);
        Integer BP=new Integer(Bluepotion);
    
        hitting s=new hitting(RH,OH,BH,RP,OP,BP);
        
        
        output.setText(s.show());
        

    
    }                               

    private void newbieMouseClicked(java.awt.event.MouseEvent evt) {                                    
        if(newbie.isSelected())
            newbie.setSelected(true);
// TODO add your handling code here:
    }                                   

    private void richMouseClicked(java.awt.event.MouseEvent evt) {                                  
        if(rich.isSelected())
            rich.setSelected(true);// TODO add your handling code here:
    }                                 

